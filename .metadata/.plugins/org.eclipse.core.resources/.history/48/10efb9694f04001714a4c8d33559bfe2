package com.eric.lab7;

import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

import com.eric.lab6.ReadApp;

/**
 * @author Eric Strong Date: 8 Mar 2017 Lab: 7 ID: C15708709
 */
public class NameChecker
{

	// create array List
	public static ArrayList<String> names = new ArrayList<String>();

	public static void main(String[] args)
	{
		// scanner to get name
		Scanner scan = new Scanner(System.in);

		System.out.println("Please Enter a name: ");
		String keyName = scan.next();

		// getnames
		getNames();
		
		for(String n: names){
			System.out.println(n);
		}

		// checknames
		checkNames(keyName);

	}// end main

	public static void getNames()
	{
		// implement file reader and return names to the arraylist
		try
		{
			ReadApp file = new ReadApp("names.txt");
			String namesFromFile[] = file.getFileContents();

			// add each element of the array to the array list
			for (int i = 0; i < namesFromFile.length; i++)
			{
				names.add(namesFromFile[i]);
			}

		} catch (IOException e)
		{
			System.out.println("file not found");

		}
	}// end GetNames

	public static void checkNames(String key)
	{
		// logic to check each name in the array list
		for (String name : names)
		{
			if (name.equalsIgnoreCase(key))
			{

				System.out.println(key + " is a person's name in the file");
				break;
			} // end if
		}

	}// end checkNames

}// end class
