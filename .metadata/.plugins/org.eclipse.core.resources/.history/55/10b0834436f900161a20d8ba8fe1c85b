package com.eric.lab5;

public class Employee extends Person
{
	private Job job;
	private int personnelNumber;
	private static int num = 1;
	private Date startDate;

	public Employee(String firstName, String surname, Date dob, char gender, Job job, int personnelNumber,
			Date startDate)
	{
		super(firstName, surname, dob, gender);
		this.job = job;
		personnelNumber += num;
		num++;
		this.personnelNumber = personnelNumber;
		this.startDate = startDate;
	}// end constructor

	public Job getJob()
	{
		return job;
	}

	public void setJob(Job job)
	{
		this.job = job;
	}

	public int getPersonnelNumber()
	{
		return personnelNumber;
	}

	public void setPersonnelNumber(int personnelNumber)
	{
		this.personnelNumber = personnelNumber;
	}

	public static int getNum()
	{
		return num;
	}

	public static void setNum(int num)
	{
		Employee.num = num;
	}

	public Date getStartDate()
	{
		return startDate;
	}

	public void setStartDate(Date startDate)
	{
		this.startDate = startDate;
	}

	public String toString()
	{
		String message = super.toString();
		return message + "\nJob Details: " + this.job + "\nPersonnel Number: " + this.personnelNumber + "\nStart Date: "
				+ this.startDate;
	}// end toString

}// end employee
