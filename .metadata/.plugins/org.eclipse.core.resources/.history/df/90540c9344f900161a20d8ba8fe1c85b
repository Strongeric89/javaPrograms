package com.eric.lab5;

import java.io.IOException;

public class Job
{

	private double salary;
	private String role;
	private int jobID;

	public ReadApp file1;

	public Job(double salary, String role, int jobID)
	{
		this.salary = salary;
		this.role = role;
		this.jobID = jobID;

	}// end constructor

	public double getSalary()
	{
		return salary;
	}

	public void setSalary(double salary)
	{
		this.salary = salary;
	}

	public String getRole()
	{
		return role;
	}

	public void setRole(String role)
	{
		this.role = role;
	}

	public int getJobID()
	{
		return jobID;
	}

	public void setJobID(int jobID)
	{
		this.jobID = jobID;
	}

	public String toString()
	{
		return "Salary: €" + this.salary + "\nRole: " + this.role + "\nJobID: " + this.jobID;
	}

	// PART 3 adding in FILE IO
	public void setupFile(String filename)
	{
		try
		{
			ReadApp file = new ReadApp(filename);
			this.file1 = file;
		} catch (IOException ioe)
		{
			System.out.println("File not available");
		}

	}// end set up file

	public void readfromfile()
	{
		try
		{
			file1.readFile();
		} catch (IOException ioe)
		{
			System.out.println("File could not be read - in readfrom file");
		}

	}

}// end job
