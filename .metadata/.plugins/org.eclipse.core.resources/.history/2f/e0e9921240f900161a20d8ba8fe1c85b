//		int i = 0;
//		for (int j = 0; j < i; j++)
//		{
//			text = lines[j];
//			// saves file to the parent directory of the project - f5 to refresh
//			Files.write(Paths.get("./fileName.txt"), text.getBytes());
//		}
	//}
}// end class
