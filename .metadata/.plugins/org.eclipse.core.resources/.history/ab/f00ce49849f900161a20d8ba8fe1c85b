package com.eric.lab5;

import java.io.IOException;

public class Employee extends Person
{
	public ReadApp file;
	private Job job;
	private int personnelNumber;
	private static int num = 0;
	private Date startDate;

	public Employee(String firstName, String surname, Date dob, char gender, Job job, int personnelNumber,
			Date startDate)
	{
		super(firstName, surname, dob, gender);
		this.job = job;
		personnelNumber += num;
		num++;
		this.personnelNumber = personnelNumber;
		this.startDate = startDate;
	}// end constructor

	public Job getJob()
	{
		return job;
	}

	public void setJob(Job job)
	{
		this.job = job;
	}

	public int getPersonnelNumber()
	{
		return personnelNumber;
	}

	public void setPersonnelNumber(int personnelNumber)
	{
		this.personnelNumber = personnelNumber;
	}

	public static int getNum()
	{
		return num;
	}

	public static void setNum(int num)
	{
		Employee.num = num;
	}

	public Date getStartDate()
	{
		return startDate;
	}

	public void setStartDate(Date startDate)
	{
		this.startDate = startDate;
	}

	public String toString()
	{
		String message = super.toString();
		String output = message + "\nJob Details: \n\t" + this.job + "\nPersonnel Number: " + this.personnelNumber
				+ "\nStart Date: " + this.startDate;

		return output;

	}// end toString

	public void WriteToStringtoFile()
	{
		// /*
		// * PART 4 - writing to file
		// *
		// */
		String output = toString();

		// write to file
		try
		{
			file.writeFile("names.txt", output);
		} catch (IOException ioe)
		{
			System.out.println("could not write to file");
		}
	}// end part 4

}// end employee
